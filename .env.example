# ملف البيئة للمشروع - Local Home Services
# قم بنسخ هذا الملف إلى .env وملء القيم المطلوبة

# معلومات قاعدة البيانات - MongoDB
# للاستخدام المحلي (Local MongoDB)
MONGODB_URI=mongodb://localhost:27017/local_home_services

# أو للاستخدام مع MongoDB Atlas (سحابي)
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# إعدادات الخادم
PORT=5000
NODE_ENV=development

# مفتاح سري للجلسات (اختياري للمستقبل)
# SESSION_SECRET=your-secret-key-here

# إعدادات CORS (اختياري)
CORS_ORIGIN=*
# للتطوير: استخدم * للسماح من جميع النطاقات
# للإنتاج: حدد النطاق المسموح به مثل http://localhost:3000
